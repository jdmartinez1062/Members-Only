<h1>Sign up</h1>
    
    

<%=form_with model: @user, local: true do |f|%>
    <div>
    <%=render 'shared/users_error_messages'%>
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
    <%=f.label :name, "Username"%>
    <%=f.text_field :name%>
    <%=f.label :email%>
    <%=f.email_field :email%>
    <%=f.label :password%>
    <%=f.password_field :password%>
    <%=f.label :password_confirmation%>
    <%=f.password_field :password_confirmation%>
    <%=f.submit "Create account"%>    

<% end %>




